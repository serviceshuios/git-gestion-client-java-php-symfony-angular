{% extends '::base.html.twig' %} {% block title %}Authentification !{%
endblock %} {% block body %} {# S'il y a une erreur, on l'affiche dans
un joli cadre #} {% if error %}
<div class="alert alert-danger">{{ error.message }}</div>
{% endif %} {# Le formulaire, avec URL de soumission vers la route «
login_check » comme on l'a vu #}
<div class="formWrapper">
	<form action="{{ path('login_check') }}" method="post">

		<fieldset>
			<legend>Authentification</legend>
			<table>
				<tr>
					<td><label for="username">Login :</label></td>
					<td><input type="text" id="username" name="_username"
						value="{{ last_username }}" /></td>
				</tr>
				<tr>
					<td><label for="password">Mot de passe :</label></td>
					<td><input type="password" id="password" name="_password" /></td>
				</tr>

			</table>
			<p>
				<input type="submit" value="Connexion" />
			</p>
	
	</form>
</div>

{% endblock %}
