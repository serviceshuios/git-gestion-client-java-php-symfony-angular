{% extends '::base.html.twig' %}

{% block title %}Notes{% endblock %}

{% block body %}
		<div class="notes">
    		{% for note in app.session.get('notes') %}
    		<div class="msg">
    			<h2>{{ note.title }}</h2>
    			<p class="msgContent">{{ note.content }}</p>
    		</div>
    		{% endfor %}
    	</div>
        <div class="formWrapper">
            <form action="{{ path('nmc_note') }}" method="post">
            	<fieldset>
            		<legend>Nouvelle note</legend>
            		<table>
            			<tr>
            				<td><label for="title">Titre</label></td>
            				<td><input type="text" name="title" /></td>
            			</tr>
            			<tr>
            				<td>
            					<label for="content">Votre note</label>
            				</td>
            				<td>
            					<textarea name="content" class="message"></textarea>
            				</td>
            			</tr>
            		</table>
            	
                </fieldset>
                <p><input type="submit" name="submit" value="Envoyer !"/></p>	
            </form>
        </div>
        <p class="center"><a href="{{ path('nmc_note_clear') }}">Vider la liste de notes</a></p>

{% endblock %}